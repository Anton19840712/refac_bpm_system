{
  "ConnectionStrings": {
    "BpmDatabase": "Host=localhost;Port=5433;Database=bpm_engine;Username=bpm;Password=bpm"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Debug"
    }
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "service",
    "Password": "A1qwert",
    "VirtualHost": "/",
    "Enabled": true,
    "RetryCount": 5,
    "RetryDelaySeconds": 5,
    "Queues": [
      {
        "QueueName": "bpm.process.start",
        "ProcessPublicId": null,
        "Enabled": true,
        "Description": "Основная очередь запуска процессов"
      },
      {
        "QueueName": "bpm.orders",
        "ProcessPublicId": "order-workflow",
        "Enabled": true,
        "Description": "Очередь заказов - всегда запускает order-workflow"
      },
      {
        "QueueName": "bpm.notifications",
        "ProcessPublicId": null,
        "Enabled": false,
        "Description": "Очередь уведомлений (отключена для теста)"
      }
    ]
  },
  "Infrastructure": {
    "EnableErrorHandling": true,
    "EnableCompression": true,
    "EnableLogging": true,
    "EnableTelemetry": false,
    "EnableHealthChecks": true,
    "EnableSecurityHeaders": true,
    "EnableSwagger": true,

    "ErrorHandling": {
      "IncludeExceptionDetails": true
    },
    "Logging": {
      "MinimumLevel": "Debug",
      "OutputFormat": "Text"
    },
    "HealthCheck": {
      "EnableDetailedOutput": true
    },
    "Telemetry": {
      "EnableConsoleExporter": true
    },
    "Swagger": {
      "EnableScalar": true,
      "IncludeXmlComments": true,
      "Version": "v1",
      "Title": "BPME",
      "Description": "Управление Бизнес Процессами"
    }
  }
}
